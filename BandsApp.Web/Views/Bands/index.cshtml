<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!--<link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">-->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
	<link href="/styles.css" rel="stylesheet" />
	<title>Bands</title>
</head>
<body>
	<div class="wrapper">

		<!-- Header -->
		<header class="bg-light py-1 text-center">
			<h1>Bands</h1>
		</header>


		<div class="container items-centered mt-3">
			<div class="row">


				<ul class="list-unstyled text-center">
					@foreach (var band in Model)
					{
						<li class="fs-3 p-4">
							<a href="@Url.Action("Details", "Bands", new { id = band.Id })">@band.Name</a>
						</li>
					}
				</ul>
			</div>
		</div>

	</div>

	<!-- Footer -->
	<footer class="bg-dark text-white text-center py-3 mt-5">
		<div class="container">
			<p class="mb-0">&copy; 2025 Group 7. All rights reserved.</p>
			<p class="mb-0">Webmaster: <a href="mailto:webmaster@example.com" class="text-white">webmaster@example.com</a></p>
		</div>
	</footer>
</body>
</html>